{
    "name": "project",
    "version": "1.0.0",
    "description": "FrontEnd project",
    "private": true,
    "scripts": {
        "start": "webpack serve --env port=3300 mode=development",
        "build:prod": "webpack --env mode=production",
        "build:dev": "webpack --env mode=development",
        "lint:ts": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "lint:ts:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
        "lint:scss": "npx stylelint 'src/**/*.scss'",
        "lint:scss:fix": "npx stylelint 'src/**/*.scss' --fix",
        "prettier": "npx prettier --check 'src/**/*.{ts,tsx}'",
        "prettier:fix": "prettier --write 'src/**/*.{ts,tsx}'",
        "eslint-check": "npx eslint-config-prettier 'src/**/*.{ts,tsx}'",
        "stylelint-check": "stylelint-config-prettier-check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{jts,tsx}": "prettier --check",
        "src/**/*.{ts,tsx}": "eslint",
        "src/**/*.{scss}": "stylelint"
    },
    "keywords": [
        "frontend"
    ],
    "author": "Kadadov Sasha <kadadov.sasha@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
        "@svgr/webpack": "^6.5.1",
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@types/react-router-dom": "^5.3.3",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "css-loader": "^6.7.3",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-standard-with-typescript": "^34.0.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-boundaries": "^3.1.0",
        "eslint-plugin-i18next": "^6.0.0-2",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.1.1",
        "mini-css-extract-plugin": "^2.7.2",
        "prettier": "2.8.4",
        "react-refresh": "^0.14.0",
        "sass": "^1.58.0",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "stylelint": "^15.1.0",
        "stylelint-config-standard-scss": "^7.0.1",
        "stylelint-order": "^6.0.2",
        "stylelint-prettier": "^2.0.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1"
    },
    "dependencies": {
        "i18next": "^22.4.9",
        "i18next-browser-languagedetector": "^7.0.1",
        "i18next-http-backend": "^2.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.1.5",
        "react-router-dom": "^6.8.1"
    }
}
