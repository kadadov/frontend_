{
    "plugins": [],
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "semi": true,
    "trailingComma": "none",
    "arrowParens": "always",
    "quoteProps": "consistent",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.scss",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.{ts,tsx}",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
